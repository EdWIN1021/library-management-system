// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id
  email             String     @unique
  username              String
  hashedPassword    String
  favorite          Favorite[]
  borrowed          Borrowed[]
}

model Favorite {
  id           Int      @id
  title        String
  authors      String
  description  String
  edition      String?
  format       String
  num_pages    Int
  rating       Int
  rating_count Int
  review_count Int
  genres       String
  genre_list   String
  image_url    String
  Quote1       String
  Quote2       String
  Quote3       String

  userId       String
  user    User    @relation(fields: [userId], references: [id])
}

model Borrowed {
  id           Int      @id
  title        String
  authors      String
  edition      String?
  image_url    String
  expireDate   String
  borrowAt     String

  userId       String
  user    User    @relation(fields: [userId], references: [id])
}
 